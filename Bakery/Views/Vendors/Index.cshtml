@{
  Layout = "_Layout";
}
    @using Bakery.Models;

    <h1 style="text-align: center;">Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h3 style="text-align: center;">No vendors have been added yet!</h3>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3 style="text-align: center;"><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
    }

    <p style="text-align: center;"><a href='/'>Back home</a></p>
